<li>
  <div class="post-data">
  
    <div class="post-creater">
      <%= post.user.name%>
      <% if (locals.user && locals.user.id == post.user.id) {%>
      <a href="/posts/destroy/<%= post._id%>">X</a>
      <%}%>
    </div>
    <div class="post-photo">
      <img src="<%= post.photo%>" alt="photo">
    </div>
    <div class="post-descr">
      <%=post.content%>
    </div>
    <div class="like-share">
      <% if(locals.user){%>
        <a class="post-likes" href="/likes/toogle/?id=<%= post._id%>&type=Post" class="toogle-like-button" data-likes="<%= post.likes.length%>">
          <%= post.likes.length%> <i class="fa-regular fa-heart"></i>
        </a>
        <%if(like_clicked){%>
          
          hey you clicked that
          <script type ="text/javascript" src="like_script.js"></script>
          <%}%>
        <%}else{%>
          <%= post.likes.length%> Likes
      <%}%>
    </div>
    <div class="comment">
      <ul id="post-comments-<%=post._id%>">
        <% for(comment of post.comments) {%>
          
          <%- include('_comment') -%>
          <%}%>
      </ul>
      
    </div>
    <% if(locals.user){%>
      <div class="type-comm">
        <form class="add-a-comment" action="/comments/create" id="new-post-form" method="post">
          <input class="comm-type" type="text" name="content"  placeholder="Type comment..."></input>
          <!-- this line is for sending the post id to the server -->
          <input type="hidden" name="post" value="<%= post._id%>"></input>
          
          <input class="comm-submit" type="submit" value="Add commnent">
        </form>
      </div>
      
      <%}%>
  </div>

   
    
    
    
  
    
   