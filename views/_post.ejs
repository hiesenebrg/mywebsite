<li>
  <div class="post-data">
  <% if (locals.user && locals.user.id == post.user.id) {%>
    <div class="post-creater">
      <%= post.user.name%><a href="/posts/destroy/<%= post._id%>">X</a>
    </div>
    <div class="post-photo">
      <img src="../uploads/users/avatars/avatar-1664694794284-625915271" alt="photo">
    </div>
    <div class="post-descr">
      <%=post.content%>
    </div>
    <div class="like-share">
      <% if(locals.user){%>
        <a href="/likes/toogle/?id=<%= post._id%>&type=Post" class="toogle-like-button" data-likes="<%= post.likes.length%>">
          <%= post.likes.length%> <i class="fa-regular fa-heart"></i>
        </a>
        <%}else{%>
          <%= post.likes.length%> Likes
      <%}%>
    </div>
    <div class="comment">
      <ul id="post-comments-<%=post._id%>">
        <% for(comment of post.comments) {%>
          
          <%- include('_comment') -%>
          <%}%>
      </ul>
      
    </div>
    <% if(locals.user){%>
      <div class="type-comm">
        <form class="add-a-comment" action="/comments/create" id="new-post-form" method="post">
          <input type="text" name="content"  placeholder="Type comment..."></input>
          <!-- this line is for sending the post id to the server -->
          <input type="hidden" name="post" value="<%= post._id%>"></input>
          <input  type="submit" value="Add commnent">
        </form>
      </div>
      
      <%}%>
  </div>

